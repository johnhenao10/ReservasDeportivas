<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:backgroundTint="#11cfc5"
        app:cardCornerRadius="15dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:background="#11cfc5">

            <TextView
                android:id="@+id/tv_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre Reserva: "
                android:textColor="#000"
                android:textSize="25dp"/>
            <TextView
                android:id="@+id/tv_fecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha Reserva: "
                android:textColor="#000"
                android:textSize="25dp"/>
            <TextView
                android:id="@+id/tv_hora_inicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hora Inicio Reserva: "
                android:textColor="#000"
                android:textSize="25dp"/>
            <TextView
                android:id="@+id/tv_hora_final"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hora Final Reserva: "
                android:textColor="#000"
                android:textSize="25dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>